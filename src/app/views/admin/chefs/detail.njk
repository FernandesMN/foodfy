{% extends 'admin/layout.njk' %}

{% block content %}
    <div class="chef-exibition-admin">
        <div class="chef-header">
            <h2>Chef: {{chef.name}}</h2>
            <a href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
        </div>

        <div class="chef-presentation">
            <img src="{{chef.avatar_url}}" alt="Foto de {{chef.name}}">
            <h1>{{chef.name}}</h1>
            <p>{{total_receipts}} receitas</p>
        </div>

        <h2>Receitas</h2>
        <section class="cards-admin cards-chef-admin">
            {% for recipe in receipts %}
                <div class="card-admin" id="burger.png">
                    <div class="card-image-admin">
                        <img src="{{recipe.image}}" alt="image of {{recipe.title}}">
                    </div>

                    <div class="card-content-admin">
                        <h2>{{recipe.title}}</h2>
                    <p>por 
                        {% for chef in chefsOptions %}
                            {% if chef.id == recipe.chef_id%}
                                {{chef.name}}
                            {% endif %}
                        {% endfor %}
                    </p>
                        <a href="/admin/receipts/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </section>
    </div>
{% endblock %}