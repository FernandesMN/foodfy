{% extends 'admin/layout.njk' %}

{% block content %}
    <div class="chef-header">
        <h2>Chef: {{chef.name}}</h2>
        <button type="submit">Editar Chef</button>
    </div>

    <div class="chef-presentation">
        <img src="{{chef.avatar_url}}" alt="Foto de {{chef.name}}">
        <h1>{{chef.name}}</h1>
        <p>{{total_receipts}} receitas</p>
    </div>

    <section class="cards-recipe">
        {% for recipe in receipts %}
            <div class="card" id="{{recipe.id}}">
                <div class="card-image active">
                    <img src="{{recipe.image}}" alt="image of {{recipe.title}}">
                </div>

                <div class="card-content">
                    <h2>{{recipe.title}}</h2>
                <p>por {{chef.name}}</p>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}