<button type="submit" class="button-save">Salvar chef</button>

<div class="edit-form">
    <div id="edit-name-chef">
        <h2>Nome</h2>
        <input 
            type="text" 
            name="name" 
            placeholder="Nome do Chef"
            value="{{chef.name}}"
        >
    </div>  

    <div id="edit-image">
        <h2>Avatar</h2>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="URL da imagem"
            value="{{chef.avatar_url}}"
        >
    </div>
</div>        
