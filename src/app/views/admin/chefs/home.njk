{% extends 'admin/layout.njk' %}

{% block content %}
    <h2>Gerenciar chefs</h2>

    <section class="chefs-manager">
        {% for chef in chefs %}
            <div class="chef-card">
                <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
                <h2>{{chef.name}}</h2>
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
            </div>
        {% endfor %}
    </section>
{% endblock %}