{% extends "website/layout.njk" %}

{% block head %}
    <title>Foodfy - receita</title>
{% endblock %}

{% block content %}
    <section class="recipe">
        <div class="card" id="{{recipe.id}}">
            <div class="image-recipe">
                <img src="{{recipe.image}}" alt="image of {{recipe.title}}">
            </div>

            <div class="info-recipe">
                <h2>{{recipe.title}}</h2>
                <p>por 
                    {% for chef in chefsOptions %}
                        {% if chef.id == recipe.chef_id%}
                            {{chef.name}}
                        {% endif %}
                    {% endfor %}
                 </p>
            </div>

            <div class="ingredient-recipe active">
                <h2>Ingredientes <a class="to_hide-ingredient">ESCONDER</a></h2>
                
                <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="preparation-recipe active">
                <h2>Modo de preparo <a class="to_hide-preparation">ESCONDER</a></h2>

                <ul>
                    {% for step in recipe.preparation %}
                        <li>{{step}}</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="additional-information-recipe active">
                <h2>Informações adicionais <a class="to_hide-information">ESCONDER</a></h2>

                <p>{{recipe.information}}</p>
            </div>
        </div>
    </section>

    <script src="/toggleDetails.js"></script>
{% endblock %}