<button type="submit" class="button-save">Salvar receita</button>

<div class="edit-form">
    <div id="edit-title">
        <h2>Nome da receita</h2>
        <input 
            type="text" 
            name="title" 
            placeholder="Nome da imagem"
            value="{{recipe.title}}"
        >
    </div>  

    <div id="edit-image">
        <h2>Imagem da receita</h2>
        <input 
            type="url" 
            name="image" 
            placeholder="URL da imagem"
            value="{{recipe.image}}"
        >
    </div>

    <div id="ingredients">
        <h2>Ingredientes</h2>
        <div class="ingredient">
            {% if recipe.ingredients != "" %}
                {% for ingredient in recipe.ingredients %}
                    <input type="text" name="ingredients[]" value="{{ingredient}}">
                {% endfor %}
            {% endif %}
            <input type="text" name="ingredients[]" placeholder="Ingredient">
        </div>
    </div>
    <button type="button" class="new-ingredient">Adicionar novo ingrediente</button>

    <div id="preparation">
        <h2>Modo de preparo</h2>
        <div class="preparation">
            {% if recipe.preparation != "" %}
                {% for step in recipe.preparation %}
                    <input type="text" name="ingredients[]" value="{{step}}">
                {% endfor %}
            {% endif %}        
            <input type="text" name="preparation[]" placeholder="Novo passo">
        </div>
    </div>
    <button type="button" class="new-step">Adicionar novo passo</button>

    <div id="edit-information">
        <h2>Informações adicionais</h2>
        
        <textarea 
            name="information"
            id="" cols="30" 
            rows="10">
            {% if recipe.information != "" %}
                {{recipe.information}}
            {% endif %}
        </textarea>
    </div>
</div>        
