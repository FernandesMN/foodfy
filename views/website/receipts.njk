{% extends "website/layout.njk" %}

{% block head %}
    <title>Foodfy - receitas</title>
{% endblock %}

{% block content %}
    <section class="cards-recipe">
        {% for recipe in receipts %}
            <div class="card" id="{{recipe.id}}">
                <div class="card-image active">
                    <img src="{{recipe.image}}" alt="image of {{recipe.title}}">
                </div>

                <div class="card-content">
                    <h2>{{recipe.title}}</h2>
                    <p>por {{recipe.author}}</p>
                </div>
            </div>
        {% endfor %}
    </section>

    <script src="/scripts.js"></script>
{% endblock %}